<h1>New function</h1>

<% form_for(@function) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body , "cols" => 100 %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, "cols" => 80 %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>
  <p>
    <%= f.label :visible %><br />
    <%= f.check_box :visible %>
  </p>
  <p>
    <%= f.label :editable %><br />
    <%= f.check_box :editable %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', functions_path %>
