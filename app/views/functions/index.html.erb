<h1>Listing functions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Body</th>
    <th>Description</th>
    <th>Type</th>
    <th>Visible</th>
    <th>Editable</th>
  </tr>

<% for function in @functions %>
  <tr>
    <td><%=h function.name %></td>
    <td><%=syn function.body %></td>
    <td><%=h function.description%></td>
    <td><%=h function.type %></td>
    <td><%=h function.visible %></td>
    <td><%=h function.editable %></td>
    <td><%= link_to 'Show', function %></td>
    <td><%= link_to 'Edit', edit_function_path(function) %></td>
    <td><%= link_to 'Destroy', function, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

